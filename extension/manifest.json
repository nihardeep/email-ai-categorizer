{
  "manifest_version": 3,
  "name": "Email AI Categorizer",
  "version": "1.0",
  "description": "Automatically categorize your Gmail emails using AI",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "https://mail.google.com/*",
    "https://*.googleusercontent.com/*"
  ],

  "host_permissions": [
    "https://mail.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["lib/inboxsdk.js", "content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Email AI Categorizer"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
